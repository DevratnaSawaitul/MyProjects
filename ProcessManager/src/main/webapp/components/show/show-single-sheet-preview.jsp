<!-- Show Single Sheet Preview Modal -->
<div id="show-single-sheet-preview-modal" class="modal">
    <div class="preview-content">
        <!-- Header -->
        <div class="preview-header">
            <span id="preview-sheet-title"></span>
            <button class="close-btn" title="Close Preview" onclick="closeShowSheetPreviewModal()">×</button>
        </div>

        <!-- Body -->
        <div class="preview-body">
            <!-- Process List -->
            <div class="process-container">
                <h3>Sheet Processes</h3>
                <div id="process-list"></div>
            </div>
        </div>
    </div>
</div>
